{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "build",
        "baseUrl": "./",
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ],
            "@types/lexio": [
                "node_modules/lexio"
            ]
        },
        "lib": [
            "ES5",
            "ES2015",
            "DOM",
            "ScriptHost"
        ],
        "rootDirs": [
            "./src/"
        ]
    },
    "include": [
        "src/**/*"
    ]
}
